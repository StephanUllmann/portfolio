---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

const allPlogPosts = await getCollection("blog");
---

<BaseLayout title="Blog">
  <h1>Here's the blog!</h1>
  {allPlogPosts.map((p) => <a href={`/blog/${p.slug}`}>{p.data.title}</a>)}
</BaseLayout>
